<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ejercicio12">

    <TextView
        android:id="@+id/videoInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video Information"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/playbackStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Playback Status"
        app:layout_constraintTop_toBottomOf="@id/videoInfoTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:gravity="center" />

    <Button
        android:id="@+id/togglePlaybackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clic"
        app:layout_constraintTop_toBottomOf="@id/playbackStatusTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:onClick="togglePlayback" />

</androidx.constraintlayout.widget.ConstraintLayout>
